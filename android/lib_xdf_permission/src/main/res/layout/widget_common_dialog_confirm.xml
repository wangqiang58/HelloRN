<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_confirm_dialog_bg"
        android:minHeight="199dp"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/widget_font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="13dp"
            android:textColor="@color/widget_color_gray_1"
            android:textSize="@dimen/widget_font_h3"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:paddingHorizontal="32dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lineSpacingExtra="7dp"
                android:gravity="center"
                android:textColor="@color/widget_color_gray_1"
                android:textSize="@dimen/widget_font_body" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/widget_font_medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/widget_shape_bg_common_confirm_dialog_cancel"
                android:gravity="center"
                android:text="@string/widget_common_cancel"
                android:textColor="@color/widget_color_theme"
                android:textSize="@dimen/widget_font_body" />

            <View
                android:id="@+id/view_empty"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_sure"
                style="@style/widget_font_medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/widget_shape_bg_common_confirm_dialog_sure"
                android:gravity="center"
                android:text="@string/widget_common_sure"
                android:textColor="@color/widget_color_white"
                android:textSize="@dimen/widget_font_body" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>