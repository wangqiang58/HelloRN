<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/common_confirm_dialog_bg"
        android:minHeight="145dp"
        android:orientation="vertical"
        android:paddingTop="21dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:text="温馨提示"
            android:textColor="#1E1E1E"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:layout_marginBottom="25dp" >

            <TextView
                android:id="@+id/tv_content"
                android:textSize="14sp"
                android:text="是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑是否保存此次编辑"
                android:textColor="#1E1E1E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFE3E3E3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="放弃"
                android:textColor="#666666"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFE3E3E3" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="保存"
                android:textColor="#1FB895"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>